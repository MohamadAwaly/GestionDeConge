<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    //expire après 30mn d'inactivité de l'utilisateur
    <session-config>
        <session-timeout>32</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.Login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Test</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.Test</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TestEntityManager</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.TestEntityManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Personnes</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.Personnes</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>NouvellePersonne</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.NouvellePersonne</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Connexion</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.Connexion</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Sosietes</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.Sosietes</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Sosietes</servlet-name>
        <url-pattern>/societes</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/seconnecter</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>NouvellePersonne</servlet-name>
        <url-pattern>/nouvellepersonne</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Personnes</servlet-name>
        <url-pattern>/personnes</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TestEntityManager</servlet-name>
        <url-pattern>/testEntityManager</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/ajoutpersonne</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GestionTestJDBC</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.GestionTestJDBC</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GestionTestJDBC</servlet-name>
        <url-pattern>/testjdbc</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LabConnection</servlet-name>
        <servlet-class>com.atc.momo.Jiwaii.servlets.LabConnection</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LabConnection</servlet-name>
        <url-pattern>/labConnection</url-pattern>
    </servlet-mapping>
</web-app>